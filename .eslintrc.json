{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:import/errors", "plugin:import/warnings"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": "error"
  },
  "overrides": [
    {
      "files": "*test.js",
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
